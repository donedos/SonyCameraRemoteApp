<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ================= LIVE VIEW ================= -->
    <FrameLayout
        android:id="@+id/fl_liveview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sleepyzzz.sonycameraremotecontrol.sonyapi.view.PlayerView
            android:id="@+id/pv_liveview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Optional drawing / overlay layer -->
        <!--
        <com.sleepyzzz.sonycameraremotecontrol.sonyapi.view.DrawImageView
            android:id="@+id/div_paint"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        -->

    </FrameLayout>

    <!-- ================= CAMERA STATUS ================= -->
    <TextView
        android:id="@+id/tv_camera_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/alpha_green"
        android:background="@android:color/transparent"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <!-- ================= LOCATION INFO ================= -->
    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/tv_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:hint="lng" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lng"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:hint="lat" />

    </RelativeLayout>

    <!-- ================= VOICE / MIC ================= -->
    <ImageButton
        android:id="@+id/bTapToSpeak"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/mic_on" />

    <!-- ================= IMAGE PREVIEW ================= -->
    <ImageView
        android:id="@+id/iv_image_wipe"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="12dp"
        android:background="@drawable/picture_wipe_boarder"
        android:src="@android:drawable/ic_menu_report_image"
        android:visibility="invisible" />

    <!-- ================= CAPTURE CONTROLS ================= -->
    <RelativeLayout
        android:id="@+id/rl_capture_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp">

        <ImageButton
            android:id="@+id/btn_capture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/btn_capture_still_normal" />

        <ImageButton
            android:id="@+id/btn_start_record"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_capture_rec_start_normal"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/btn_stop_record"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/alpha_btn_capture"
            android:src="@drawable/btn_capture_rec_stop_normal"
            android:visibility="invisible" />

    </RelativeLayout>

    <!-- ================= ZOOM CONTROLS ================= -->
    <RelativeLayout
        android:id="@+id/rl_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp">

        <ImageButton
            android:id="@+id/btn_zoom_tele"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_zoom_tele" />

        <ImageButton
            android:id="@+id/btn_zoom_wide"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/btn_zoom_tele"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_zoom_wide" />

    </RelativeLayout>

    <!-- ================= MODE & SETTINGS ================= -->
    <RelativeLayout
        android:id="@+id/rl_mode_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp">

        <ImageButton
            android:id="@+id/btn_setup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/btn_change_mode"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_settings"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/btn_change_mode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_shooting_mode_still" />

    </RelativeLayout>

    <!-- ================= FOCUS INDICATOR ================= -->
    <RelativeLayout
        android:id="@+id/rl_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.sleepyzzz.sonycameraremotecontrol.sonyapi.view.FocusIndictorView
            android:id="@+id/fiv_focus"
            android:layout_width="72dp"
            android:layout_height="72dp" />

    </RelativeLayout>

</RelativeLayout>